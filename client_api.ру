from flask import Blueprint, request, jsonify
from app import db
from models import Client

client_bp = Blueprint('client_bp', _name_)

@client_bp.route('/api/clients', methods=['GET'])
def get_clients():
    clients = Client.query.all()
    return jsonify([{'id': c.id, 'name': c.name, 'phone': c.phone} for c in clients])

@client_bp.route('/api/clients', methods=['POST'])
def add_client():
    data = request.get_json()
    new_client = Client(name=data['name'], phone=data['phone'])
    db.session.add(new_client)
    db.session.commit()
    return jsonify({'message': 'Клиент добавлен'}), 201
